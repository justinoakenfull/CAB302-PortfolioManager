<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="TOP_CENTER" styleClass="flow-pane" stylesheets="@stocks.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javarepowizards.portfoliomanager.controllers.stocks.StocksController">
    <VBox prefHeight="800.0" HBox.hgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" prefHeight="100.0">
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
            </VBox.margin>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="240.0">
                <Label prefHeight="58.0" prefWidth="160.0" styleClass="heading-title" text="Stocks" underline="true">
                    <font>
                        <Font name="Arial Bold" size="40.0" />
                    </font>
                </Label>
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="557.0">
                <TextField fx:id="stockSearchField"
                           maxHeight="32.0" maxWidth="256.0"
                           prefHeight="24.0" prefWidth="196.0"
                           promptText="Search Stock..">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="20.0" right="16.0" />
                    </HBox.margin>
                </TextField>
            </HBox>
        </HBox>
        <VBox prefHeight="800" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="10" left="30" right="30" top="10" />
            </VBox.margin>
            <TableView fx:id="tableView" styleClass="stock-table" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="infoCol" editable="false" prefWidth="100.0" resizable="false" sortable="false" />
                    <TableColumn fx:id="favouriteCol" editable="false" prefWidth="100.0" resizable="false" sortable="false" />
                </columns>
            </TableView>
        </VBox>
    </VBox>
    <Region maxWidth="64.0" prefHeight="830.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
    <VBox prefHeight="828.0" prefWidth="331.0">
        <HBox.margin>
            <Insets right="30.0" top="30.0" />
        </HBox.margin>
        <VBox prefHeight="391.0" prefWidth="331.0" styleClass="card">
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
            <Text fill="WHITE" text="Balance">
                <styleClass>
                    <String fx:value="heading-title" />
                    <String fx:value="company-snapshot-title" />
                </styleClass>
            </Text>

            <Label fx:id="cashBalanceLabel"
                   text="Cash: $0.00"
                   style="-fx-font-size: 16px; -fx-text-fill: white;" />

            <Label fx:id="portfolioValueLabel"
                   text="Portfolio: $0.00"
                   style="-fx-font-size: 16px; -fx-text-fill: white;" />

            <Separator prefWidth="200.0" styleClass="balance-text" />
            <HBox prefHeight="200.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
                <!-- Pie Chart for visual holdings -->
                <VBox prefHeight="200.0" prefWidth="200.0">
                    <PieChart fx:id="portfolioPieChart" prefHeight="200.0" prefWidth="200.0" />
                </VBox>
            </HBox>
                </VBox>
        <Region prefHeight="64.0" prefWidth="331.0" />
        <VBox prefHeight="538.0" prefWidth="331.0">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="331.0" styleClass="card">
                <Label text="Buy Stocks" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="40.0" />
                    </font>
                </Label>
                <Separator prefWidth="200.0" styleClass="balance-text" />
                <VBox prefHeight="522.0" prefWidth="297.0">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                        <Button mnemonicParsing="false" onAction="#decreasePurchaseAmount" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                                    <Image url="@../../../../../com/javarepowizards/portfoliomanager/images/StockButtonRemove64x64.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets bottom="8.0" top="8.0" />
                            </HBox.margin>
                        </Button>
                        <Region prefHeight="200.0" prefWidth="100.0" />
                        <TextField fx:id="stockQuantityField" alignment="CENTER" maxHeight="48.0" maxWidth="320.0" prefHeight="32.0" prefWidth="288.0" text="1">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font></TextField>
                        <Region prefHeight="200.0" prefWidth="100.0" />
                        <Button mnemonicParsing="false" onAction="#increasePurchaseAmount" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                                    <Image url="@../../../../../com/javarepowizards/portfoliomanager/images/StockButtonAdd64x64.png" />
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets bottom="8.0" top="8.0" />
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <Region maxHeight="16.0" maxWidth="5000.0" prefHeight="20.0" prefWidth="20.0" VBox.vgrow="ALWAYS" />
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="108.0" styleClass="purchase-swapper" text="Contracts" textOverrun="CLIP">
                            <HBox.margin>
                                <Insets left="24.0" />
                            </HBox.margin>
                        </Button>
                        <Region maxHeight="64.0" maxWidth="32.0" prefHeight="60.0" prefWidth="32.0" />
                        <Button mnemonicParsing="false" prefHeight="23.0" prefWidth="92.0" styleClass="purchase-swapper" text="Balance" textOverrun="CLIP">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font>
                        </Button>
                    </HBox>
                    <Label fx:id="pricePerShareLabel"
                           text="Price: $0.00"
                           alignment="CENTER"
                           textAlignment="CENTER"
                           wrapText="true"
                           maxWidth="Infinity"
                           style="-fx-font-size: 16px; -fx-text-fill: #cccccc; -fx-font-weight: normal;">
                        <VBox.margin>
                            <Insets top="6.0" bottom="4.0"/>
                        </VBox.margin>
                    </Label>
                    <Label fx:id="buyFeedbackLabel"
                           alignment="CENTER"
                           text="No Stock Selected!"
                           wrapText="true"
                           textAlignment="CENTER"
                           contentDisplay="CENTER"
                           maxWidth="Infinity"
                           prefWidth="280.0"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1f75fe;">
                        <VBox.margin>
                            <Insets left="24.0" right="24.0" top="10.0" bottom="10.0"/>
                        </VBox.margin>
                    </Label>
                    <Region prefHeight="203.0" prefWidth="297.0" />
                    <HBox maxHeight="48.0" prefHeight="100.0" prefWidth="200.0">
                        <Region maxHeight="48.0" prefHeight="33.0" prefWidth="86.0" />
                        <Button fx:id="buyStockButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="48.0" prefWidth="124.0" text="Buy Stock">
                            <font>
                                <Font name="Arial" size="18.0" />
                            </font>
                        </Button>
                    </HBox>
                </VBox>
                <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0" />
            </VBox>
        </VBox>
    </VBox>
</HBox>
