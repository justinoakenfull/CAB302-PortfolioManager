<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox styleClass="flow-pane" stylesheets="@portfolio.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javarepowizards.portfoliomanager.controllers.portfolio.PortfolioController">
    <children>
      <VBox HBox.hgrow="ALWAYS">
         <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0">
                    <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                     <children>
                                <Label styleClass="heading-title" text="Portfolio">
                                    <font>
                                        <Font size="40.0" />
                                    </font>
                                </Label>
                        <Separator prefWidth="200.0" />
                     </children>
                  </VBox>
                    </children>
                </HBox>
            <HBox>
               <children>
                    <VBox prefHeight="800.0" styleClass="card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox prefHeight="100.0" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox prefHeight="200.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Portfolio Value">
                                       <styleClass>
                                          <String fx:value="card-title-text" />
                                          <String fx:value="card-text" />
                                       </styleClass>
                                       <VBox.margin>
                                          <Insets left="15.0" right="15.0" />
                                       </VBox.margin>
                                    </Text>
                                    <Separator prefWidth="200.0" />
                                    <Text layoutX="10.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0" text="\$1703.00">
                                       <styleClass>
                                          <String fx:value="card-text" />
                                          <String fx:value="balance-value-positive" />
                                       </styleClass>
                                       <VBox.margin>
                                          <Insets left="15.0" right="15.0" />
                                       </VBox.margin>
                                    </Text>
                                 </children>
                              </VBox>
                              <Region prefHeight="200.0" HBox.hgrow="ALWAYS" />
                               <PieChart fx:id="pieChart" title="Total Value" titleSide="BOTTOM" stylesheets="@portfolio.css">

                               </PieChart>

                              <Region prefHeight="200.0" HBox.hgrow="ALWAYS" />
                              <VBox alignment="TOP_RIGHT" prefHeight="200.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Portfolio Change %">
                                       <styleClass>
                                          <String fx:value="card-title-text" />
                                          <String fx:value="card-text" />
                                       </styleClass>
                                       <VBox.margin>
                                          <Insets left="15.0" right="15.0" />
                                       </VBox.margin>
                                    </Text>
                                    <Separator prefWidth="200.0" />
                                    <Text layoutX="10.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0" text="-3%">
                                       <styleClass>
                                          <String fx:value="card-text" />
                                          <String fx:value="balance-value-negative" />
                                       </styleClass>
                                       <VBox.margin>
                                          <Insets left="30.0" right="30.0" />
                                       </VBox.margin>
                                    </Text>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <TextField promptText="Search for Stock" styleClass="card-text">
                           <VBox.margin>
                              <Insets bottom="15.0" left="120.0" right="120.0" top="15.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <TableView prefHeight="200.0" styleClass="portfolio-table">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Stock">
                                 <styleClass>
                                    <String fx:value="column-header" />
                                    <String fx:value="column-header-background" />
                                 </styleClass>
                              </TableColumn>
                              <TableColumn prefWidth="75.0" text="Change % (24hr)">
                                 <styleClass>
                                    <String fx:value="column-header" />
                                    <String fx:value="column-header-background" />
                                 </styleClass>
                              </TableColumn>
                              <TableColumn prefWidth="75.0" text="Balance">
                                 <styleClass>
                                    <String fx:value="column-header" />
                                    <String fx:value="column-header-background" />
                                 </styleClass>
                              </TableColumn>
                          </columns>
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                    </VBox>
                  <Region prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
                  <VBox prefHeight="800.0" prefWidth="300.0" styleClass="card">
                     <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Stock Information" textAlignment="CENTER">
                           <font>
                              <Font size="40.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="15.0" />
                           </VBox.margin>
                           <styleClass>
                              <String fx:value="heading-title" />
                              <String fx:value="card-title-text" />
                           </styleClass>
                        </Text>
                        <Separator prefWidth="200.0" styleClass="balance-text" />
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Text styleClass="card-text" text="CBA is Australia's largest bank, offering a comprehensive range of financial services, including retail, business, and institutional banking, as well as wealth management and insurance. As of April 2, 2025, the stock closed at A$154.82, marking a 28% increase over the past year." wrappingWidth="300.0">
                                 <VBox.margin>
                                    <Insets bottom="10.0" top="10.0" />
                                 </VBox.margin>
                              </Text>
                              <Text styleClass="card-text" text="In the first half of the 2025 financial year, CBA reported a cash net profit after tax of A$5.13 billion, a 2% increase from the previous year. This growth was driven by a stable net interest margin of 2.08%, 3% growth in home loans, and 8% growth in business loans. The bank declared an interim dividend of A$2.25 per share, up 5% from the prior year. ​" wrappingWidth="300.0">
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </Text>
                              <Text styleClass="card-text" text="Investors should note that CBA's high valuation may be sensitive to macroeconomic factors, including potential interest rate adjustments by the Reserve Bank of Australia. ​" wrappingWidth="300.0">
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </Text>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </VBox>
                        <Separator prefWidth="200.0" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
    </children>
</HBox>
