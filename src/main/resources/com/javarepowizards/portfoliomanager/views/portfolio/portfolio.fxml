<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextArea?>
<HBox styleClass="flow-pane" stylesheets="@portfolio.css"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javarepowizards.portfoliomanager.controllers.portfolio.PortfolioController">
    <children>
        <VBox HBox.hgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="heading-title" text="Portfolio">
                                    <font>
                                        <Font size="40.0" />
                                    </font>
                                </Label>
                                <Separator prefWidth="200.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox>
                    <children>
                        <VBox prefHeight="800.0" styleClass="card" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox spacing="15.0">
                                    <HBox prefHeight="100.0" VBox.vgrow="ALWAYS">
                                        <children>
                                            <VBox prefHeight="200.0">
                                                <children>
                                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Portfolio Value">
                                                        <styleClass>
                                                            <String fx:value="card-title-text" />
                                                            <String fx:value="card-text" />
                                                        </styleClass>
                                                        <VBox.margin>
                                                            <Insets left="15.0" right="15.0" />
                                                        </VBox.margin>
                                                    </Text>
                                                    <Separator prefWidth="200.0" />
                                                    <Text fx:id="totalValueText"
                                                          strokeType="OUTSIDE" strokeWidth="0.0"
                                                          text="\$0.00">
                                                        <styleClass>
                                                            <String fx:value="card-text" />
                                                            <String fx:value="balance-value-positive" />
                                                        </styleClass>
                                                        <VBox.margin>
                                                            <Insets left="15.0" right="15.0" />
                                                        </VBox.margin>
                                                    </Text>
                                                </children>
                                            </VBox>

                                            <Region prefHeight="200.0" HBox.hgrow="ALWAYS" />

                                            <PieChart fx:id="pieChart"
                                                      title="Total Value"
                                                      titleSide="BOTTOM"
                                                      prefHeight="250.0"
                                                      prefWidth="250.0"
                                                      stylesheets="@portfolio.css" />

                                            <Region prefHeight="200.0" HBox.hgrow="ALWAYS" />

                                            <VBox alignment="TOP_RIGHT" prefHeight="200.0">
                                                <children>
                                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Portfolio Change %">
                                                        <styleClass>
                                                            <String fx:value="card-title-text" />
                                                            <String fx:value="card-text" />
                                                        </styleClass>
                                                        <VBox.margin>
                                                            <Insets left="15.0" right="15.0" />
                                                        </VBox.margin>
                                                    </Text>
                                                    <Separator prefWidth="200.0" />
                                                    <Text fx:id="changePctText"
                                                          strokeType="OUTSIDE" strokeWidth="0.0"
                                                          text="0.00%">
                                                        <styleClass>
                                                            <String fx:value="card-text" />
                                                            <String fx:value="balance-value-negative" />
                                                        </styleClass>
                                                        <VBox.margin>
                                                            <Insets left="30.0" right="30.0" />
                                                        </VBox.margin>
                                                    </Text>
                                                </children>
                                            </VBox>
                                        </children>
                                    </HBox>

                                    <TextField promptText="Search for Stock" styleClass="card-text">
                                        <VBox.margin>
                                            <Insets bottom="15.0" left="120.0" right="120.0" top="10.0" />
                                        </VBox.margin>
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </TextField>
                                </VBox>
                                <TableView fx:id="portfolioTable"
                                           styleClass="portfolio-table"
                                           VBox.vgrow="ALWAYS"
                                           prefHeight="200.0">
                                    <columns>
                                        <TableColumn fx:id="stockCol" text="Stock" />
                                        <TableColumn fx:id="changeCol" text="Portfolio %" />
                                        <TableColumn fx:id="balanceCol" text="Balance" />
                                        <TableColumn fx:id="sellCol" text="Sell" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                            <HBox.margin>
                                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                            </HBox.margin>
                        </VBox>

                        <Region prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />

                        <VBox prefHeight="800.0" prefWidth="300.0" styleClass="card">
                            <children>
                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Stock Information" textAlignment="CENTER">
                                    <font><Font size="40.0" /></font>
                                    <VBox.margin><Insets bottom="15.0" /></VBox.margin>
                                    <styleClass>
                                        <String fx:value="heading-title" />
                                        <String fx:value="card-title-text" />
                                    </styleClass>
                                </Text>
                                <VBox prefHeight="400.0" prefWidth="300.0">
                                    <TextArea fx:id="stockInfoText"
                                              VBox.vgrow="ALWAYS"
                                              wrapText="true"
                                              editable="false"
                                              focusTraversable="false"
                                              style="-fx-font-size: 14px; -fx-control-inner-background: #2b2b2b; -fx-text-fill: white;" />
                                </VBox>
                                <Separator prefWidth="200.0" styleClass="balance-text" />
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                </VBox>
                                <Separator prefWidth="200.0" />
                            </children>
                            <HBox.margin><Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /></HBox.margin>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
