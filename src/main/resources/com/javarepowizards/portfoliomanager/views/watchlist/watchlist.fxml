<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox alignment="TOP_CENTER" styleClass="flow-pane" stylesheets="@watchlist.css" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javarepowizards.portfoliomanager.controllers.watchlist.WatchlistController">
    <VBox prefHeight="800.0" HBox.hgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" prefHeight="100.0">
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
            </VBox.margin>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="240.0">
                <Label styleClass="heading-title" text="Watchlist">
                    <font>
                        <Font size="40.0"/>
                    </font>
                </Label>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="557.0">
                <Button alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#onAddStock"
                        styleClass="btn" text="Add Stock"/>
            </HBox>
        </HBox>
        <VBox fx:id="tableContainer" prefHeight="800" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="10" left="30" right="30" top="10"/>
            </VBox.margin>
            <TableView fx:id="tableView" styleClass="watchlist-table" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </TableView>
        </VBox>
    </VBox>
    <Region HBox.hgrow="ALWAYS"/>
    <VBox prefHeight="800.0" prefWidth="300.0">
        <HBox.margin>
            <Insets right="30.0" top="30.0"/>
        </HBox.margin>
        <VBox prefHeight="200.0" prefWidth="100.0" styleClass="card">
            <VBox.margin>
                <Insets bottom="30.0"/>
            </VBox.margin>
            <!--                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Balance" textAlignment="CENTER">-->
            <Text fill="WHITE" text="Portfolio Snapshot">
                <styleClass>
                    <String fx:value="heading-title"/>
                    <String fx:value="company-snapshot-title"/>
                </styleClass>
            </Text>
            <Separator prefWidth="200.0" styleClass="balance-text"/>
            <HBox VBox.vgrow="ALWAYS">
                <VBox prefHeight="400.0" prefWidth="400.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="noStocksWarning" text="Please purchase stocks">
                        <styleClass>
                            <String fx:value="company-snapshot-text"/>
                            <String fx:value="heading-title"/>
                        </styleClass>
                    </Label>
                    <!-- Portfolio Overview Widget -->
                    <Pane fx:id="portfolioPieContainer" VBox.vgrow="ALWAYS"/>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <opaqueInsets>
                        <Insets bottom="10.0" top="10.0"/>
                    </opaqueInsets>
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <Text fx:id="stockOneLabel" fill="WHITE" strokeType="OUTSIDE"
                                  strokeWidth="0.0" styleClass="balance-text">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </Text>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0"
                              prefHeight="100.0" prefWidth="200.0">
                            <Text fx:id="stockOneValue" strokeType="OUTSIDE" strokeWidth="0.0"
                                  styleClass="balance-value-positive">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </Text>
                        </HBox>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <Text fx:id="stockTwoLabel" fill="WHITE" strokeType="OUTSIDE"
                                  strokeWidth="0.0" styleClass="balance-text">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </Text>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="96.0" layoutY="10.0"
                              prefHeight="100.0" prefWidth="200.0">
                            <Text fx:id="stockTwoValue" strokeType="OUTSIDE" strokeWidth="0.0"
                                  styleClass="balance-value-neutral">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </Text>
                        </HBox>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <Text fx:id="stockThreeLabel" fill="WHITE" strokeType="OUTSIDE"
                                  strokeWidth="0.0" styleClass="balance-text">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </Text>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="104.0" layoutY="10.0"
                              prefHeight="100.0" prefWidth="200.0">
                            <Text fx:id="stockThreeValue" strokeType="OUTSIDE" strokeWidth="0.0"
                                  styleClass="balance-value-negative">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </Text>
                        </HBox>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <Text fx:id="stockFourLabel" fill="WHITE" strokeType="OUTSIDE"
                                  strokeWidth="0.0" styleClass="balance-text">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </Text>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <Text fx:id="stockFourValue" fill="#65a24b" strokeType="OUTSIDE"
                                  strokeWidth="0.0" styleClass="balance-value-positive">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </Text>
                        </HBox>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
        <VBox prefWidth="100.0">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <VBox alignment="TOP_CENTER" prefWidth="378.0" styleClass="card">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Company Snapshot"
                      textAlignment="CENTER">
                    <font>
                        <Font size="40.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                    <styleClass>
                        <String fx:value="heading-title"/>
                        <String fx:value="company-snapshot-title"/>
                    </styleClass>
                </Text>
                <Separator prefWidth="200.0" styleClass="balance-text"/>
                <VBox>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <HBox alignment="TOP_CENTER" blendMode="ADD" VBox.vgrow="ALWAYS">
                        <ProgressIndicator fx:id="progressIndicator" visible="false"/>
                    </HBox>
                    <ScrollPane fx:id="snapshotScrollPane" fitToWidth="true" hbarPolicy="NEVER"
                                minViewportHeight="205.0" pannable="true"
                                styleClass="snapshot-scrollpane" VBox.vgrow="ALWAYS">
                        <Text fx:id="snapshotText" styleClass="company-snapshot-text"
                              text="Select a stock to see its description here…" wrappingWidth="330.0"/>
                    </ScrollPane>
                </VBox>
                <Separator prefWidth="200.0"/>
                <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0">
                    <Button fx:id="viewStockButton" mnemonicParsing="false" onAction="#onViewStock"
                            styleClass="btn" text="View Stock">
                        <HBox.margin>
                            <Insets right="30.0" top="30.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
        <Region VBox.vgrow="ALWAYS"/>
    </VBox>
</HBox>
